{
  "manifest_version": 2,

  "name": "Tab Menu",
  "description": "A minimalist tabs manager. Search, switch, rearrange, and close tabs from the toolbar menu.",
  "version": "9.0.1",

  "browser_action": {
    "default_icon": {
      "16": "16.png",
      "32": "35.png",
      "48": "48.png",
      "128": "128.png"
    },
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": false
  },

  "icons": {
    "16": "16.png",
    "32": "35.png",
    "48": "48.png",
    "128": "128.png"
  },

  "permissions": [ "tabs", "storage", "contextMenus" ],

  "update_url": "https://clients2.google.com/service/update2/crx"
}
